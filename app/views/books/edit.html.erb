 <h1>Editing Book</h1>
    
    <!--成功時のメッセージ-->
 <% if flash[:notice] %>
   <p id="notice">
     <%= flash[:notice] %>
   </p>
 <% end %>
 
 <!--エラー時のメッセージ-->
  <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

　<!-- form_with部分 -->
　<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <div><%= f.submit 'Update Book' %></div>

　<% end %>

